
  <!-- SIDEBAR-MENU -->
  <div class="sidebar-menu">
    <input type="checkbox" id="toggle">

    <label for="toggle" >
      <svg  viewbox="0 0 100 100" width="40px" height="40px">
        <circle cx="50" cy="50"></circle>
      </svg>

      <div class="cancel-lines" id="my-cancel-lines">

        <% if current_user %>
          <% if current_user.avatar.attached? %>
            <%= cl_image_tag current_user.avatar.key, class: "avatar" %>
          <% else %>
            <%= image_tag("avatar.svg", class: "avatar") %>
          <% end %>
        <% else %>
          <span class="navbar-toggler-icon"></span>
        <% end %>

      </div>
    </label>
  </div>

  <!-- Sidebar Nav -->
  <div id="mySidenav" class="sidenav">
    <div>
      <% if current_user %>
        <a><%= link_to "Log out", destroy_user_session_path, method: :delete, class: "border-bottom" %></a>
        <a><%= link_to "My Projects", projects_path, class: "border-bottom" %></a>
        <a><%= link_to "Create Project", new_project_path, class: "border-bottom" %></a>
      <% else %>
        <a><%= link_to "Login", new_user_session_path, class: "border-bottom" %></a>
      <% end %>

      <% if !current_user %>
        <a><%= link_to "Create account", '#', class: "border-bottom" %></a>
      <% end %>

      <a><%= link_to "Home", root_path, class: "border-bottom" %></a>
    </div>
  </div>


