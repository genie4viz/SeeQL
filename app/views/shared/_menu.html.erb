<!-- SIDEBAR-MENU -->
<div class="sidebar-menu">
    <input type="checkbox" id="toggle">
    <label for="toggle" >
        <svg  viewbox="0 0 100 100" width="100%" height="100%">
            <circle cx="50" cy="50"></circle>
        </svg>
        <% if current_user %>
            <% if current_user.avatar.attached? %>
                <div class="avatar" id="my-burger-menu">
                    <%= cl_image_tag current_user.avatar.key %>
                </div>
            <% else %>
                <div class="avatar" id="my-burger-menu">
                    <%= image_tag("avatar.svg", id: "my-burger-menu") %>
                </div>
            <% end %>
        <% else %>
            <div class="hamburger" id="my-burger-menu">
                <div class="center"></div>
            </div>
        <% end %>
    </label>
</div>
<!-- Sidebar Nav -->
<div id="mySidenav" class="sidenav">
    <%= link_to "Home", root_path, class: "border-bottom" %>
    <% if current_user %>
        <%= link_to "My Projects", projects_path, class: "border-bottom" %>
        <%= link_to "Create Project", new_project_path, class: "border-bottom" %>
        <%= link_to "Log out", destroy_user_session_path, method: :delete, class: "border-bottom" %>
    <% else %>
        <a class="border-bottom" data-toggle="modal" data-target="#loginModal">Login</a>
    <% end %>
    <% if !current_user %>
        <a class="border-bottom" data-toggle="modal" data-target="#signupModal">Sign Up</a>
    <% end %>
</div>
