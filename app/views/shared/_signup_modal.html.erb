<div class="modal fade" id="signupModal" tabindex="-1" role="dialog" aria-labelledby="signupModalTitle" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title modal-header" id="signupModalTitle">Sign Up</h5>
            </div>
            <div class="modal-body">
                <div class="signup-errors"><ul class="signup-errors-list"></ul></div>
                <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), remote: true, html: { id: :signup_form }) do |f| %>
                    <%= f.error_notification %>
                    <div class="form-inputs">
                        <%= f.input :first_name, required: true, autofocus: true %>
                        <%= f.input :last_name, required: true %>
                        <%= f.input :email, required: true, autofocus: true, input_html: { autocomplete: "email", id: "signup-email" } %>
                        <%= f.input :password, required: true, hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length), input_html: { autocomplete: "new-password", id: "new-password" } %>
                        <%= f.input :password_confirmation, required: true, input_html: { autocomplete: "new-password", id: "confirm-password" } %>
                    </div>
                <% end %>
            </div>
            <div class="modal-footer">
                <button id="signup-button-form" type="submit" form="signup_form" class="btn-seeql">
                    Sign up
                </button>
            </div>
        </div>
    </div>
</div>
