<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="form-inputs">
        <%= f.input :email, required: false, autofocus: true, input_html: { autocomplete: "email" } %>
        <%= f.input :password, required: false, input_html: { autocomplete: "current-password" } %>
        <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
        <%= render "devise/shared/login-links" %>
    </div>
    <div class="form-actions">
        <div class="modal-footer">
            <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
                <button type="button" class="btn btn-outline-white" data-toggle="modal" data-target="#signupModal">
                    Sign Up
                </button>
            <% end %>
            <%= f.button :submit, "Log in", class: "btn btn-outline-white" %>
        </div>
    </div>
<% end %>
